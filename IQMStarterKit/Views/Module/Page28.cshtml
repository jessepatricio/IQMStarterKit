@section Scripts{

    <script type="text/javascript">

        function CheckValue() {

            if (!$('textarea').filter(function () { return this.value.length; }).length) {
                // all empty
                toastr.warning('Nothing to save!.')
                return false;
            }
            return true;

        }

        //confirmation dialog


        $('form').submit(function (e) {
            var currentForm = this;
            e.preventDefault();
            bootbox.confirm("Are you sure you want to submit your work?", function (result) {
                if (result) {
                    if (CheckValue()) {
                        currentForm.submit();
                    }
                }
            });
        });


        


    </script>
