@model IEnumerable<IQMStarterKit.Models.Core.TempModule>

<h3>Module List</h3>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered" id="modules" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th><text>Total No. of Activities</text></th>
            <th></th>
        </tr>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.TempActivities.Count()
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TempModuleId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TempModuleId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TempModuleId })
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#modules').DataTable({
                "bLengthChange": false,
                "bFilter": false
            });
        });
    </script>
}